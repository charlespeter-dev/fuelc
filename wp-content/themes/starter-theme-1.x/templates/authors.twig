{% extends "base.twig" %}

{% block content %}

<section class="authors py-3 pt-lg-4 pb-lg-5">
	<div class="container container-1088">

		<div class="row text-center">
			<div class="col">
				<h1 class="hero-heading">
					Meet Our Authors
				</h1>
				<p class="hero-paragraph">
					Since the founding of our organization, we empower sales professionals and leaders each year to
					master the craft of selling
				</p>
			</div>
		</div>

		<div class="row g-5">

			{% for author in authors %}

			<div class="col pt-4 text-center">
				<div class="card author">
					<div>
						<img src="{{ author.profile_picture_url }}" alt="">
					</div>
					<div class="display-name">
						<h3>{{ author.display_name }}</h3>
					</div>
					<div class="description">
						{{ author.description }}
					</div>
					<div>
						<a class="main-btn brand-btn" href="{{ author.url }}">View Bio</a>
					</div>
				</div>
			</div>

			{% endfor %}

		</div>

	</div>
</section>

{% endblock %}