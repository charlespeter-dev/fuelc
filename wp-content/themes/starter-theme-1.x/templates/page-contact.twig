{% extends 'base.twig' %}

{% block content %}
	<div class="container container-1088 wrapper">
		<div class="horizontal-line-clean mb-5"></div>
		<div class="wrapper-inner pb-5">
			<div class="text-side">
				<img src="{{ Image(post.meta('image')).src }}"
					alt="{{ Image(post.meta('image')).alt }}"
					class="img-fluid" />
				<p class="subheading">
					{{ post.subheading }}
				</p>
				<h1 class="heading">
					{{ post.heading }}
				</h1>
				<div>
					{{ post.text_editor }}
				</div>
			</div>
			<div class="form-side p-3">
				<div class="form-wrapper">
					{{ post.form_code }}
				</div>
			</div>
		</div>
		<div class="my-5"></div>
		<div class="horizontal-line-clean"></div>
	</div>
{% endblock %}
