	</section>
	<section id="cases-slider">
		<div class="container container-1088 cases-slider-wrapper-outer">
			<div class="left-side">
				<h2 class="cases-slider-heading cases-slider-heading--desktop">
					{{ post.cases_slider_heading }}
				</h2>
				<div class="cases-slider-wrapper">
					<div id="casesSlider"
						class="carousel carousel-dark slide"
						data-bs-ride="carousel"
						data-bs-interval="false">
						<div class="carousel-inner">
							{% for slide in post.meta('cases_for_slider') %}
								<div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}">
									<div class="carousel-item-inner">
										<div class="slide-wrapper">
											<div class="img-wrapper">
												<img class="img-fluid" src="{{ slide.logo.url }}" alt="{{ slide.logo.alt }}" />
											</div>
											<div class="text-wrapper">
												<p class="case-slider-paragraph">
													{{ slide.paragraph }}
												</p>
												<a class="slide-link-text" href="{{ slide.link_text_url }}">
													{{ slide.link_text }} <i class="fa-solid fa-arrow-right"></i>
												</a>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}

							<div class="carousel-item">
								<div class="carousel-item-inner">
									{% for brand in brands.meta('brands_logo') %}
										{% if loop.index < 16 %}
											<div class="brand-wrapper">
												<img src="{{ brand.logo.url }}" alt="{{ brand.logo.alt }}" />
											</div>
										{% endif %}
									{% endfor %}
								</div>
							</div>
							<div class="carousel-item">
								<div class="carousel-item-inner">
									{% for brand in brands.meta('brands_logo') %}
										{% if loop.index < 16 %}
											<div class="brand-wrapper">
												<img src="{{ brand.logo.url }}" alt="{{ brand.logo.alt }}" />
											</div>
										{% endif %}
									{% endfor %}
								</div>
							</div>
						</div>

						<div class="carousel-indicators">
							{% for slide in post.meta('cases_for_slider') %}
								<button type="button"
									data-bs-target="#casesSlider"
									data-bs-slide-to="{{ loop.index0 }}"
									aria-label="Slide {{ loop.index }}"
									class="{{ loop.index == 1 ? 'active' : '' }}"
									aria-current="{{ loop.index == 1 ? 'true' : '' }}">

								</button>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			<div class="right-side">
				<h2 class="cases-slider-heading cases-slider-heading--mobile">
					{{ post.cases_slider_heading }}
				</h2>
				<div id="casesArrows" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="false">
					<div class="carousel-inner">
						{% for slide in post.meta('cases_for_slider') %}
							<div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}">
								<img class="img-fluid arrow-image" src="{{ slide.right_side_large_arrow.url }}" alt="{{ slide.right_side_large_arrow.alt }}" />
							</div>
						{% endfor %}
					</div>
					<div class="carousel-indicators">
						{% for slide in post.meta('cases_for_slider') %}
							<button type="button"
								data-bs-target="#casesArrows"
								data-bs-slide-to="{{ loop.index0 }}"
								aria-label="Slide {{ loop.index }}"
								class="{{ loop.index == 1 ? 'active' : '' }}"
								aria-current="{{ loop.index == 1 ? 'true' : '' }}">

							</button>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</section>
	<section id="awards">
		<div class="container container-700">
			<h2 class="awards-title">
				{{ post.awards_title }}
			</h2>
			<div class="awards-icons-wrapper">
				<div class="column">
					<div class="award-logo-img-wrapper">
						<img class="img-fluid award-logo-img" src="{{ Image(post.meta('award_logo_1')).src }}" alt="{{ Image(post.meta('award_logo_1')).alt }}" />
					</div>
					<p class="award-logo-text">
						{{ post.award_logo_text_1 }}
					</p>
				</div>
				<div class="column">
					<div class="award-logo-img-wrapper">
						<img class="img-fluid award-logo-img" src="{{ Image(post.meta('award_logo_2')).src }}" alt="{{ Image(post.meta('award_logo_2')).alt }}" />
					</div>
					<p class="award-logo-text">
						{{ post.award_logo_text_2 }}
					</p>
				</div>
				<div class="column">
					<div class="award-logo-img-wrapper">
						<img class="img-fluid award-logo-img" src="{{ Image(post.meta('award_logo_3')).src }}" alt="{{ Image(post.meta('award_logo_3')).alt }}" />
					</div>
					<p class="award-logo-text">
						{{ post.award_logo_text_3 }}
					</p>
				</div>
			</div>
			<p class="awards-paragraph">
				{{ post.awards_paragraph }}
			</p>
			<a href="{{ post.awards_link_url }}" class="awards-link">
				{{ post.awards_link_text }} <i class="fa-solid fa-arrow-right"></i>
			</a>
		</div>
	</section>
	<section id="articles-slick-slider" class="">
		<div class="left-arrow">
			<div class="awards-background-arrow-wrapper">
				<img class="img-fluid awards-background-arrow"
					src="{{ Image(post.meta('awards_section_background_arrow')).src }}" alt="{{ Image(post.meta('awards_section_background_arrow')).alt }}" />
			</div>
		</div>
		<div class="articles-wrapper container container-1088">
			<h2 class="articles-section-title">
				{{ post.articles_section_title }}
			</h2>
			<div class="articles-responsive">
				{% for post in post.meta('articles') %}
					<div class="single-post-wrapper">
						<div class="post-image-wrapper">
							<a href="{{ post.link }}"><img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" class="post-image" /></a>
						</div>
						<div class="post-text-wrapper">
							<span class="post-categories">
								{% for category in post.categories %}
									{{ category }}{% if loop.length > 1 and loop.index < loop.length %},{% endif %}
								{% endfor %}
							</span>
							<h4 class="single-post-title">
								<a href="{{ post.link }}">
									{{ (post.title|length) > 110 ? (post.title|slice(0, 110)) ~ '...' : post.title }}
								</a>
							</h4>
							<p class="single-post-excerpt">
								{% if post.post_excerpt_custom %}
									{{ post.post_excerpt_custom }}
									<i class="fa-solid fa-arrow-right"></i>
								{% else %}
									{{
										post.preview.length(14).force.read_more(
											'<i class="fa-solid fa-arrow-right"></i>'
										)
									}}
								{% endif %}
							</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
	{% include 'cta-form.twig' %}
	<!-- /content-wrapper -->
{% endblock %}
