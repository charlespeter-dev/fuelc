{% extends 'base.twig' %}

{% block content %}
	<section id="home-hero">
		<div class="container container-1088 home-hero-wrapper">
			<div class="left-hero">
				<h1 class="hero-title">
					{{ post.hero_title }}
				</h1>
				<p class="hero-paragraph">
					{{ post.hero_paragraph }}
				</p>
				<div class="links-wrapper">
					{# <a class="hero-button main-btn">{{ post.hero_button_text }}</a> #}
					 <!-- Button trigger modal -->
					<button type="button" class="hero-button main-btn video-btn" data-bs-toggle="modal" data-src="{{post.hero_button_url}}" data-bs-target="#myModal">
					{{ post.hero_button_text }}
					</button>
					<br />
					<a href="{{ post.hero_link_url }}" class="hero-link-text">
						{{ post.hero_link_text }} <i class="fa-solid fa-arrow-right"></i>
					</a>
					{# <a href="{{ post.hero_link_url }}">
						<img src="{{ TimberImage(post.get_field('hero_link_icon')).src }}"
							alt="{{ TimberImage(post.get_field('hero_link_icon')).alt }}"
							class="hero-link-icon" />
					</a> #}
				</div>
			</div>
			<div class="right-hero">
				<video id="background-video" autoplay loop muted playsinline poster="">
					<source src="{{ file_url }}" type="video/mp4" />
				</video>
			</div>
		</div>
		<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      
      <div class="modal-body">
       <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></span>
        </button>        
        <!-- 16:9 aspect ratio -->
<div class="ratio ratio-16x9">
  <iframe class="embed-responsive-item" id="video"  allowscriptaccess="always" allow="autoplay" sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-presentation"></iframe>
</div>
        
        
      </div>

    </div>
  </div>
</div> 
	</section>
	<section id="tabbed-slider">
		<div class="container container-1088 tabbed-slider-wrapper">
			<h2 class="tabbed-slider-heading">
				{{ post.tabbed_slider_heading }}
			</h2>
			<div class="tabbed-slider-button-wrapper">
				<a href="{{ post.tabbed_slider_button_url }}" class="main-btn tabbed-slider-button">
					{{ post.tabbed_slider_button_text }}
				</a>
			</div>
			<div class="tabs-images-wrapper">
				<div class="tabbed-left">
					<div class="mb-1"></div>
					<div class="horizontal-line-clean"></div>
					{% for tab in post.meta('slider_tabs') %}
						<div class="mb-4"></div>
						<div class="single-tab-wrapper single-tab-wrapper--tab">
							<div class="single-tab-icon">
								<img src="{{ Image(tab.icon) }}"
									alt=""
									class="tab-icon tab-icon-color {{ loop.index == 1 ? 'active' : 'hidden' }}" />
								<img src="{{ Image(tab.icon_disabled) }}"
									alt=""
									class="tab-icon tab-icon-gray {{ loop.index == 1 ? 'hidden' : 'active' }}" />
							</div>
							<div class="single-tab-text">
							<a href="{{ tab.view_icon_url }}">
								<span class="tab-subtitle">{{ tab.subtitle }}</span>
								<h3 class="tab-title">
									{{ tab.title }}
								</h3>
								<p class="tab-paragraph">
									{{ tab.paragraph }}
								</p>
							</div>
							</a>
						</div>
						<div class="mb-3"></div>
						<div class="horizontal-line-clean"></div>
					{% endfor %}
				</div>
				<div class="tabbed-right">
					<div id="carouselExampleIndicators"
						class="carousel slide carousel-dark carousel-fade"
						data-bs-ride="carousel"
						data-bs-interval="false">
						<div class="carousel-indicators">
							{% for key,tab in post.meta('slider_tabs') %}
								<button type="button"
									data-bs-target="#carouselExampleIndicators"
									data-bs-slide-to="{{ key }}"
									class="{{ key == 0 ? 'active' : '' }}" aria-label="Slide {{ key+1 }}">
								</button>
							{% endfor %}
						</div>
						<div class="carousel-inner">
							{% for image in post.meta('slider_images') %}
								<div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}">
									<img class="d-block w-100" src="{{ Image(image.image) }}" alt="" />
									<div class="carousel-caption">
										<p>
											{{ image.image_caption }}
										</p>
									</div>
								</div>
							{% endfor %}
							{% for tab in post.meta('slider_tabs') %}
								<div class="single-tab-wrapper single-tab-wrapper--carousel">
									<div class="single-tab-icon">
										<img src="{{ Image(tab.icon) }}" alt="" class="tab-icon tab-icon-color active" />
									</div>
									<div class="single-tab-text">
										<a href="{{ tab.view_icon_url }}">
											<span class="tab-subtitle">{{ tab.subtitle }}</span>
											<h3 class="tab-title">
												{{ tab.title }}
											</h3>
											<p class="tab-paragraph">
												{{ tab.paragraph }}
											</p>
										</a>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section id="logos-slider">
		<div class="container container-1088">
			<h2 class="logos-slider-heading">
				{{ post.logos_slider_heading }}
			</h2>
			<p class="logos-slider-paragraph">
				{{ post.logos_slider_paragraph }}
			</p>
			<a href="{{ post.logos_slider_link_url }}" class="logos-slider-link">
				{{ post.logos_slider_link_text }}<i class="fa-solid fa-arrow-right"></i>
			</a>
			<div class="logos-slider-wrapper">
				<div id="carouselLogos"
